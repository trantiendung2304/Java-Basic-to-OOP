import java.util.Scanner;

/**
 *
 * @author Tran Tien Dung
 */
public class Ex10 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int a = sc.nextInt(), b = sc.nextInt();
        int remainder = (int) a % b;
        System.out.println(remainder);
    }
}
