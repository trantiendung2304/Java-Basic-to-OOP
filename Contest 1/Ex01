import java.util.Scanner;

/**
 *
 * @author Tran Tien Dung
 */

public class Ex01 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int x = sc.nextInt();
        long expression = (int)Math.pow(x, 3) + 3 * (int)Math.pow(x, 2) + x + 1;
        System.out.println(expression);
    }
}
