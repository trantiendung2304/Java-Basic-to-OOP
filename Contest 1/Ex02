import java.util.Scanner;

/**
 *
 * @author Tran Tien Dung
 */

public class Ex02 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int a = sc.nextInt(), b = sc.nextInt(), c = sc.nextInt();
        long S = 1L * a * (b + c) + 1L * b * (a + c);
        System.out.println(S);
    }
}
